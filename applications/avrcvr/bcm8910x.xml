<brcm_cfg>
    <comp name="avrcvr">
        <include>multimedia/pp/avcd/config/avcd.xml</include>
        <include>ethernet/1722/os/erika/listener/avb_listener.xml</include>
        <include>multimedia/display/vgc/config/display.xml</include>
        <include>multimedia/display/graphics/config/gfxsrc.xml</include>
        <include>multimedia/audio/play/os/erika/audio_play.xml</include>
        <include>ethernet/802.1as/os/erika/ets.xml</include>

        <opt>ENABLE_MEDIA_FRAMEWORK</opt>
        <opt>ENABLE_AUDIO_PLAY_PORT0</opt>
        <opt>ENABLE_VGCC_VID_12BPP</opt>
        <opt>ENABLE_VGCC_GFX_4BPP</opt>
        <opt>ENABLE_VGC_LVDS</opt>

        <task name="AVRcvr">
            <priority>11</priority>
            <autostart>false</autostart>
            <stack>2048</stack>
            <event>SystemEvent0</event> <!--Shell Stop Event-->
            <event>SystemEvent1</event> <!--Media Framework event-->
        </task>

        <cfg pid="0x5" imgid="0xDE00" maxsz="0x1000"  file="multimedia/pp/avcd/config/avcd_bp_720p_1mp.bin"/>
        <cfg pid="0x5" imgid="0xAA10" maxsz="0x1000"  file="ethernet/1722/config/avb_listener_config2.bin"/>

        <cfg pid="0x5" imgid="0xBC20" maxsz="0x1000"  file="ethernet/802.1as/config/ets_endpt_slave.bin"/>
    </comp>
</brcm_cfg>
